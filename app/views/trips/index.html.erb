<div class="navigation">
  <%= link_to trips_path do %>
    <div class="options_link left link_to">Your Trips</div>
  <% end %>
  <div class="text_divider left">|</div>
  <%= link_to feed_path do %>
    <div class="text left">Latest Activity</div>
  <% end %>
</div>
<div class="floater_4"></div>


<% if @trips.count != 0 %>

  <% @trips.reverse_each do |trip| %>
      <%= link_to trip, class:"link_to" do %>
        <div class="trip_row">
          <div class="index_trip_title"><%= trip.title %></div>
          <div class="index_trip_date"><%= "From #{trip.start_date.to_date.strftime("%^b %e, %Y")} to #{trip.end_date.to_date.strftime("%^b %e, %Y")}" %></div>
        <%= link_to "edit", edit_trip_path(trip), class:"edit_btn" %>
        </div>
      <% end %>
  <% end %>

  <div class=" full_background background_gray"></div>
  <%= link_to new_trip_path, class:"link_to" do %>
    <div class="new_trip_btn">
      <div class="title">Create your first Trip!</div>
    </div>
  <% end %>
<% end %>

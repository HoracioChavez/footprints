<div class="container">
  <div class="full_background menu_background"></div>
  <div class="title_container">
    <div class="menu_title">Create New Trip</div>
  </div>
  <div class="new_trip_form">
    <%= form_for(@trip) do |f| %>
      <div class="field">
        <%= f.label :trip_name %>:
        <%= f.text_field :title %>
      </div>
      <div class="field">
        <%= f.label :start_date %>:
        <%= f.date_field :start_date %>
      </div>
      <div class="field">
        <%= f.label :end_date %>:
        <%= f.date_field :end_date %>
      </div>
      <div class="actions">
        <%= f.submit "Create Trip"  %>
      </div>
    <% end %>
  </div>
</div>
